.new-form-page
  = simple_form_for @note do |f|
    .field
      = f.input :title, input_html:{:class=>'form-control note-title'}
    .field
      = f.input :content, as: :text, input_html:{:class=>'form-control note-content'}
    .field
      = f.button :submit, "提交",:class=>'btn btn-info .btn-form-crt'
