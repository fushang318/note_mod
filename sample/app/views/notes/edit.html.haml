.edit-form-page
  = simple_form_for @note, :method=>:put do |f|
    .field
      = f.input :title, input_html:{:class=>'form-control note-title',:value=>@note.title}
    .field
      = f.input :content, as: :text, input_html:{:class=>'form-control note-content',:value=>@note.content}
    .field
      = f.button :submit, "提交",:class=>'btn btn-info .btn-form-crt'

  